set showLineNumbers     false
set scrollJump          5
set scrollOff           3
set tabWidth            4
set lineNumberSeparator " "
set tabChar             "â€º"

nmap "<c-p>" ":files<cr>" "Open files picker"
nmap "<leader>." ":files<cr>" "Open files picker"
nmap "<leader>b" ":bookmarks<cr>" "Open bookmarks picker"
nmap "<c-g>" ":grepper<cr>" "Open grepper"
nmap "<a-b>" ":toggle showLineNumbers<cr>" "Show/hide line numbers"
nmap "<a-a>" ":toggle absoluteLineNumbers<cr>" "Enable/disable absolute line numbers"
nmap "B" ":bookmarks<cr>" "Toggle bookmarks pane"

echo "Config loaded"
